<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height= "40dp"
                        android:src="@drawable/profile_image_dummy_nw"
                        android:id="@+id/imgProfile"
                        app:civ_border_color="@color/view_divider_color_2"
                        app:civ_border_width="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imgProfile">
                        <TextView
                            android:id="@+id/tvName"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/raleway_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvCity"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="10dp"
                        android:text="S : "
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSubject"
                        android:textSize="10dp"
                        android:text="ww"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="10dp"
                        android:text="C : "
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvChapter"
                        android:textSize="10dp"
                        android:text="ww"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewLike"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_gravity="center"
                            android:id="@+id/btnLike"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_like_outline"
                            android:layout_height="25dp" />
                        <TextView
                            android:id="@+id/tvLikes"
                            android:textSize="10dp"
                            android:text="10"
                            android:layout_gravity="center"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_level"
                            android:tint="@color/colorPrimary"
                            android:layout_height="22dp" />
                        <TextView
                            android:id="@+id/tvLevel"
                            android:textSize="10dp"
                            android:text="10"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/grayfm"
                            android:layout_height="22dp" />
                        <TextView
                            android:id="@+id/tvTime"
                            android:textSize="10dp"
                            android:text="10"
                            android:layout_marginTop="3dp"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="18/20"
                    android:id="@+id/tvScore"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="24dp">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="fill_parent"
                            android:background="@color/black"
                            android:layout_weight="1"
                            android:layout_centerVertical="true"
                            android:layout_height="2dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="SCORE"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/raleway_bold"
                        android:layout_marginTop="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="fill_parent"
                            android:background="@color/black"
                            android:layout_weight="1"
                            android:layout_centerVertical="true"
                            android:layout_height="2dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <com.vaibhavlakhera.circularprogressview.CircularProgressView
                    android:id="@+id/progressView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:animate="true"
                    app:animateDuration="600"
                    app:fillColor="@color/white"
                    app:progress="0"
                    app:progressColor="@color/colorPrimary"
                    app:progressRoundCap="true"
                    app:progressTextColor="@color/colorPrimary"
                    app:progressTextEnabled="true"
                    app:progressTextSize="18sp"
                    app:progressTextType="percent"
                    app:progressWidth="6dp"
                    app:startAngle="270"
                    app:total="100"
                    app:totalColor="@color/colorPrimaryDark"
                    app:totalWidth="8dp" />
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="50"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@drawable/circular"
                        android:secondaryProgress="60" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/whitecircle"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tvPercentage"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:gravity="center"
                        android:text="50%"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
