<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/bg_btn_signup"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnSignUp"
            android:text="New Members"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white"
            android:layout_height="56dp" />
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/bg_btn_secondry"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnExistingMembers"
            android:text="Existing Members"
            android:fontFamily="@font/lato_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="56dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:textSize="12dp"
            android:text="@string/txt_privacy_policy"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ALREADY A MEMBER? "
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/color_red_light"
                android:text="LOG IN"
                android:id="@+id/tvLogin"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>